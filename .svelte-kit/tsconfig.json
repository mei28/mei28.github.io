{
	"compilerOptions": {
		"paths": {
			"$lib": [
				"../src/lib"
			],
			"$lib/*": [
				"../src/lib/*"
			],
			"@data": [
				"../src/lib/data"
			],
			"@data/*": [
				"../src/lib/data/*"
			],
			"@components": [
				"../src/lib/components"
			],
			"@components/*": [
				"../src/lib/components/*"
			],
			"@md": [
				"../src/lib/md"
			],
			"@md/*": [
				"../src/lib/md/*"
			],
			"@stores": [
				"../src/lib/stores"
			],
			"@stores/*": [
				"../src/lib/stores/*"
			],
			"@utils": [
				"../src/lib/utils"
			],
			"@utils/*": [
				"../src/lib/utils/*"
			]
		},
		"rootDirs": [
			"..",
			"./types"
		],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "bundler",
		"module": "esnext",
		"noEmit": true,
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		"./types/**/$types.d.ts",
		"../vite.config.js",
		"../vite.config.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../tests/**/*.js",
		"../tests/**/*.ts",
		"../tests/**/*.svelte"
	],
	"exclude": [
		"../node_modules/**",
		"../src/service-worker.js",
		"../src/service-worker.ts",
		"../src/service-worker.d.ts"
	]
}